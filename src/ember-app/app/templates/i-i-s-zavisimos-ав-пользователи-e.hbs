<h3 class="ui header">{{t "forms.i-i-s-zavisimos-ав-пользователи-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-zavisimos-ав-пользователи-e.датаРегистрации-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаРегистрации
      class=(if (v-get validationModel "датаРегистрации" "isInvalid") "error")
      data-test-i-i-s-zavisimos-ав-пользователи-e-датаРегистрации=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаРегистрации" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.логин
      class=(if (v-get validationModel "логин" "isInvalid") "error")
      label=(t "forms.i-i-s-zavisimos-ав-пользователи-e.логин-caption")
      data-test-i-i-s-zavisimos-ав-пользователи-e-логин=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "логин" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.пароль
      class=(if (v-get validationModel "пароль" "isInvalid") "error")
      label=(t "forms.i-i-s-zavisimos-ав-пользователи-e.пароль-caption")
      data-test-i-i-s-zavisimos-ав-пользователи-e-пароль=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "пароль" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-zavisimos-ав-пользователи-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИОСотрудника"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-zavisimos-ав-пользователи-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-zavisimos-ав-пользователи-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-zavisimos-ав-пользователи-e.тЧПрава-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧПраваGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧПрава
      content=model.тЧПрава
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧПрава" "isInvalid") "error")
      data-test-i-i-s-zavisimos-ав-пользователи-e-тЧПрава=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧПрава" "message")}}
  </div>
</form>
